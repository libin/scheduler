!!! XML
!!!
%html
  %head
    %title Integrate Scheduler
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'week'
    = stylesheet_link_tag 'calendar'
    = javascript_include_tag :defaults
      
  %body
    #base
      #base-content
        %img{ :src => "/images/base-logo.png", :alt => "Integrate Labs" }
        #basenav
          %ul
            %li


    #content
      #header
        #right
          %img{ :src => "/images/add.png", :alt => "New Event" }
          #link
            = link_to "New Event", :controller => "events", :action => "new"
        %h1 
          = link_to "Scheduler", root_path
        = link_to "Weekly View", weekly_path
        |
        = link_to "Monthly View", monthly_path
        |
        = link_to "List View", list_path
      = yield
    %br
    %br
    #footer
      Powered by
      = link_to "WeeklyBuilder", "http://github.com/dmix/weekly_builder/"
      |
      Built by
      = link_to "Dan McGrady", "http://dmix.ca"