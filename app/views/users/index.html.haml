%h1 Listing users

%table
  %tr
    %th Name

- for user in @users
  %tr
    %td=h user.name
  
    %td= link_to 'Show', user_path(user)
    %td= link_to 'Edit', edit_user_path(user)
    %td= link_to 'Destroy', user_path(user), :confirm => 'Are you sure?', :method => :delete, :confirm => "Are you sure?", :method => :delete
    
= link_to 'New user', new_user_path 